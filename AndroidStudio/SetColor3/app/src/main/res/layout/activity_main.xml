<LinearLayout tools:context=".MainActivity" android:orientation="vertical" xmlns:tools="http://schemas.android.com/tools"
              xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent" android:layout_width="match_parent" android:layout_margin="20dp">
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:layout_width="210dp" android:layout_height="210dp" android:background="@drawable/border"></TextView>
        <TextView android:layout_width="200dp" android:layout_height="200dp" android:id="@+id/tv" android:layout_margin="5dp"></TextView>
    </FrameLayout>

    <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TableRow>
            <TextView
                    android:text="Red"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/forText"
            />
            <SeekBar
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/redSB"
            android:max="255"
            android:min="0"
            android:progress="100"
            />
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/redTV"
                    android:text="100"
                    style="@style/forText"

            />
        </TableRow>
        <TableRow>
            <TextView
                    android:text="Green"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/forText"
            />
            <SeekBar
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/greenSB"
                    android:max="255"
                    android:min="0"
                    android:progress="100"
            />
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/greenTV"
                    android:text="100"
                    style="@style/forText"
            />
        </TableRow>
        <TableRow>
            <TextView
                    android:text="Blue"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/forText"
            />
            <SeekBar
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/blueSB"
                    android:max="255"
                    android:min="0"
                    android:progress="100"
            />
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/blueTV"
                    android:text="100"
                    style="@style/forText"
            />
        </TableRow>
        <TableRow>
            <TextView
                    android:text="Opacity"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/forText"
            />
            <SeekBar
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:max="255"
                    android:min="0"
                    android:progress="255"
                    android:id="@+id/alphaSB"
            />
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/alphaTV"
                    android:text="100%"
                    style="@style/forText"
            />
        </TableRow>
        <TableRow>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/setClr" android:text="SET COLOR" android:layout_span="3"
                    style="@style/forText"
            ></Button>
        </TableRow>
    </TableLayout>




</LinearLayout>