<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Background Color: "
                    android:textColor="#FF00AA"
                    android:id="@+id/bgCB"
                    android:checked="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/bgColor"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"/>
            </TableRow>
            <TableRow>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text Color: "
                    android:textColor="#FF00AA"
                    android:id="@+id/textCB"
                    android:checked="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/textColor"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp">
            <TableRow>
                <FrameLayout
                    android:layout_width="225dp"
                    android:layout_height="175dp"
                    android:layout_marginHorizontal="90dp"
                    android:background="@drawable/border"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Text Color\nText Color\nText Color"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:id="@+id/tv"
                        android:textAlignment="center"
                        android:layout_margin="5dp"/>
                </FrameLayout>
            </TableRow>
            <TableRow>
                <RadioGroup
                    android:checkedButton="@+id/bgRadio"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rGroup">

                    <RadioButton
                        android:id="@+id/bgRadio"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Background Color"
                        android:textColor="#FF00AA"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/textRadio"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Text Color"
                        android:textColor="#FF00AA"
                        android:textSize="18sp" />
                </RadioGroup>
            </TableRow>
        </TableLayout>
    </FrameLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp">
        <TableRow>
            <TextView
                android:text="Red"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/forText"
                android:layout_marginLeft="10dp"
                />

            <SeekBar
                android:id="@+id/redSB"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:max="255"
                android:min="0"
                android:progress="100"
                android:layout_marginTop="10dp"
                android:progressTint="@color/red"
                android:thumbTint="@color/red"
                android:secondaryProgress="255"
                android:secondaryProgressTint="@color/gray"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/redTV"
                android:text="100"
                style="@style/forText"

                />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Green"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/forText"
                android:layout_marginLeft="10dp"
                />
            <SeekBar
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/greenSB"
                android:max="255"
                android:min="0"
                android:progress="100"
                android:layout_marginTop="10dp"
                android:progressTint="@color/green"
                android:thumbTint="@color/green"
                android:secondaryProgress="255"
                android:secondaryProgressTint="@color/gray"

                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/greenTV"
                android:text="100"
                style="@style/forText"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Blue"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/forText"
                android:layout_marginLeft="10dp"
                />
            <SeekBar
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/blueSB"
                android:max="255"
                android:min="0"
                android:progress="100"
                android:layout_marginTop="10dp"
                android:progressTint="@color/blue"
                android:thumbTint="@color/blue"
                android:secondaryProgress="255"
                android:secondaryProgressTint="@color/gray"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/blueTV"
                android:text="100"
                style="@style/forText"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>